header.header
    .header__wrapper
        .header__column
            a.home(href=routes.home)
                i.fab.fa-youtube
                span YOUTUBE
        .header__column
            form(action=routes.search, method="get")
                input(type="text", placeholder="Search by term...", name="term")
        .header__column
            ul
                if !loggedUser
                    li
                        a(href=routes.join) Join
                    li
                        a(href=routes.login) Log In
                else 
                    .dropDown
                        img#header_avatar(src=loggedUser.avatarUrl)
                        #mydropdown.dropdown-content
                            li
                                a(href=`/videos${routes.upload}`) Upload
                            li
                                a(href=routes.me) Profile
                            li
                                a(href=routes.logout) Log Out
                